<h2 class="d-flex justify-content-center mt-5 pb-4">Sign In</h2>
<%= form_with model: @user, local: true do |form| %>
  <div class="form-group form-icons">
    <span class="fa fa-envelope"></span>
    <%= form.email_field :email, class: "form-control", placeholder: "Email address" %>
  </div>
  <div class="form-group form-icons">
    <span class="fa fa-lock"></span>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <div class="text-right mb-3">
    <a href="#" class="">Forgot password?</a>
  </div>
  <%= form.submit "Sign In", class: "form-control btn-primary" %>
  <div class="text-left mt-3">
    Don't have an account? <a href="/session/signup" class="">Sign up</a>
  </div>
<% end %>
