<h2 class="d-flex justify-content-center mt-5 pb-4">Sign Up</h2>
<%= form_with model: @user, local: true do |form| %>
  <div class="form-group form-icons">
    <span class="fa fa-envelope"></span>
    <%= form.email_field :email, class: "form-control", placeholder: "Email address" %>
  </div>
  <div class="form-group form-icons">
    <span class="fa fa-lock"></span>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <%= form.submit "Sign Up", class: "form-control btn-primary" %>
  <div class="text-left mt-3">
    Already have an account? <a href="/session/signin" class="">Sign in</a>
  </div>
<% end %>
